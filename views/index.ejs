<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trang Sản Phẩm</title>
  <!-- Liên kết tới Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css"> <!-- File CSS tùy chỉnh -->
</head>
<body>
  <!-- Header -->
  <header class="bg-primary text-white text-center py-5">
    <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <!-- Logo -->
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/logo0.jpg" alt="" width="80" height="80" class="me-2">
        ULTRA Billiards Store
      </a>
      
      <!-- Toggler for mobile view -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <!-- Navbar Links -->
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-between">
          <li class="nav-item">
            <a class="nav-link active" href="/">Trang chủ</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="cueDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Cơ - Cues
            </a>
            <ul class="dropdown-menu" aria-labelledby="cueDropdown">
              <li><a class="dropdown-item" href="#">Option 1</a></li>
              <li><a class="dropdown-item" href="#">Option 2</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="shaftDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Ngọn - Shafts
            </a>
            <ul class="dropdown-menu" aria-labelledby="shaftDropdown">
              <li><a class="dropdown-item" href="#">Option 1</a></li>
              <li><a class="dropdown-item" href="#">Option 2</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Khuyến mãi</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Liên hệ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="bi bi-search"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="fa-duotone fa-solid fa-cart-shopping"></i>
              <span class="badge bg-  danger rounded-pill">0</span>
            </a>
          </li>
        </ul>      
      </div>
    </div>
  </nav>
  
  </header>


  <!-- HERO -->
  <section id="hero" class="min-vh-100 d-flex align-items-center text-center">
    <div class="container">
        <div class="row">
            <div class="col-12">
                
            </div>
        </div>
    </div>
</section>

  <!-- Carousel -->
  <div id="carouselExampleAutoplaying" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../public/images/product1.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../public/images/product2.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../public/images/product3.jpg" class="d-block w-100" alt="...">
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="container my-5">
    <h2 class="text-center mb-4">Danh sách sản phẩm</h2>
    <div class="row">
      <% products.forEach(product => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">Giá: $<%= product.price %></p>
              <a href="/products/<%= product.id %>" class="btn btn-primary">Xem chi tiết</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-light text-center py-4">
    <p>&copy; 2024 Web App. Tất cả quyền lợi được bảo lưu.</p>
  </footer>

  <!-- Liên kết tới Bootstrap JS và Popper -->
  <script src="https://kit.fontawesome.com/23189279ad.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  <script src="/js/script.js"></script> <!-- File JS tùy chỉnh -->
</body>
</html>
